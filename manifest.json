{
  "manifest_version": 3,
  "name": "Better Find on Page",
  "version": "1.0",
  "description": "Enhanced find functionality with intelligent crawling.",
  "permissions": ["activeTab", "scripting", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
